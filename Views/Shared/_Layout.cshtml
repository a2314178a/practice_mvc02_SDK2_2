@{
    bool baseBtn = (ViewBag.ruleVal & 0x0001)>0 ? true : false;
    bool employeeListBtn = (ViewBag.ruleVal & 0x0004)>0 || (ViewBag.ruleVal & 0x0008)>0 ? true : false;
    bool departListBtn = (ViewBag.ruleVal & 0x0020)>0 ? true : false; 
    bool applySignBtn = (ViewBag.ruleVal & 0x0080)>0 ? true : false; 
    bool setRuleBtn = (ViewBag.ruleVal & 0x0040)>0 ? true : false;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>打卡系統 - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap_css_4_4_1.css" />
    <link rel="stylesheet" href="~/css/my_style.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="#" style="pointer-events:none;">打卡系統</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">           
                    @if (ViewBag.Auth == "Y")
                    {       
                        @if(baseBtn)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="PunchCard" asp-action="Index">打卡</a>
                            </li>  
                           <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ApplyLeave" asp-action="Index">出差/請假申請</a>
                            </li>  
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="EmployeeDetail" asp-action="Index">基本資料</a>
                        </li>
                        <li class="nav-item">
                            <a id="messageLink" class="nav-link text-dark" asp-area="" asp-controller="Message" asp-action="Index">訊息</a>
                        </li>       
                        @if(employeeListBtn)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="EmployeeList" asp-action="Index">員工列表</a>
                            </li>
                        }
                        @if(applySignBtn)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ApplicationSign" asp-action="Index">相關簽核</a>
                            </li>
                        }
                        @if(departListBtn)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="DepartmentList" asp-action="Index">部門職位</a>
                            </li>
                        }
                        @if(setRuleBtn)
                        {
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="SetRule" asp-action="Index" asp-route-page="timeRule">設定規則</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="logOut">登出</a>
                        </li>
                    }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @* <div class="container">
            &copy; 2020 - practice_mvc02 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div> *@
    </footer>
    <script src="~/js/api/jquery_3_4_1.js" type="text/javascript"></script>
    <script src="~/js/api/popper_1_16_1.js" type="text/javascript"></script>
    <script src="~/js/api/bootstrap_4_4_1.js" type="text/javascript"></script>    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>	
    <script src="~/js/baseNavBar.js" type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
