@{
	Layout=null;
}

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1">	
		<link rel="stylesheet" href="~/css/bootstrap/bootstrap_css_4_4_1.css" />
        <link rel="stylesheet" href="~/css/my_style.css">			    
	    <title>@ViewBag.mainText</title>
	</head>

	<body>
		<div class="container"><!--內容-->
            <div class="row mx-0 align-items-center justify-content-center w-100">
                <div class="col-10">

					<h3 style="text-align:center;">@ViewBag.mainText</h3><hr/>
					<div>
						<form id="dataForm">
							<table class="table table-striped employeeDetail">
								<tbody>
									<tr>
										<td class="detailTitleTd">名字:</td>
										<td class="detailMainTd"><input type="text" group="detail" name="userName" value=""></td>
										<td class="detailTitleTd">帳號:</td>
										@if(ViewBag.Action == "add")
										{
										<td class="detailMainTd"><input type="text" group="detail" name="account" value=""></td>
										}
										else
										{
										<td class="detailMainTd"><input type="text" group="detail" name="account" value="" readonly></td>
										}
									</tr>
									<tr>
										<td class="detailTitleTd">密碼:</td>
										<td class="detailMainTd"><input type="password" group="detail" name="password"></td>
										<td class="detailTitleTd">確認密碼:</td>
										<td class="detailMainTd"><input type="password" group="detail" name="rePassword"></td>
									</tr>
									<tr>
										<td class="detailTitleTd">性別:</td>
										<td class="detailMainTd">
											<select name="sex">
												<option value="0">女</option>
												<option value="1">男</option>
											</select>
										</td>
										<td class="detailTitleTd">身分證字號:</td>
										<td class="detailMainTd"><input type="text" name="humanID"></td>
									</tr>
									<tr>
										<td class="detailTitleTd">生日:</td>
										<td class="detailMainTd"><input type="date" group="detail" name="birthday" value=""></td>
										<td class="detailTitleTd">報到日期:</td>
										<td class="detailMainTd"><input type="date" group="detail" name="startWorkDate" value=""></td>
									</tr>
									<tr>
										<td class="detailTitleTd">部門:</td>
										<td class="detailMainTd">
											<input type="hidden" id="ruleVal" value="@ViewBag.ruleVal">
											<select group="detail" name="department">
												<option value="" >請選擇</option>
											</select>
										</td>
										<td class="detailTitleTd">職位:</td>
										<td class="detailMainTd">
											<select group="detail" name="position">
												<option value="" >請選擇</option>
											</select>
										</td>
									</tr>
									<tr>
										<td class="detailTitleTd">負責人:</td>
										<td class="detailMainTd">
											<div style="display:inline-block; vertical-align:middle;">
												<select group="detail" name="sndManager">
													<option value="0">請選擇</option>
												</select>
											</div>
											<div id="thisManagerDiv"></div>
										</td>
										<td class="detailTitleTd">職務代理人:</td>
										<td class="detailMainTd">
											<select group="detail" name="agent">
												<option value="0" >無</option>
											</select>
											<span style="margin:auto 10px;">授權&nbsp;<input type="checkbox" name="agentEnable"></span>
										</td>
									</tr>
									<tr>
										<td class="detailTitleTd">動作權限:</td>
										<td class="detailMainTd">
											<select group="detail" name="actAuthority">
												<option value="">請選擇</option>
											</select>
										</td>
										<td class="detailTitleTd">帳號等級:</td>
										<td class="detailMainTd">
											<select group="detail" name="accLV">
												<option value="1">職員(最低)</option>
												<option value="2">單位主管</option>
												<option value="3">部門主管</option>
												<option value="4">處長/廠長</option>
												<option value="5">協理</option>
												<option value="6">總經理</option>
												<option value="7">董事(最高)</option>
											</select>
										</td>
									</tr>
									<tr>
										<td class="detailTitleTd">上班時段:</td>
										<td class="detailMainTd">
											<select group="detail" name="timeRule">
												<option value="0">不受限</option>
											</select>
										</td>
									</tr>
								</tbody>
							</table>
							<hr/>
							<div style="text-align:center;">
								@if(ViewBag.Action == "add")
								{
									<input type="button" name="addEmployee" value="新增" onclick="addUpdateEmployee('add');">
								}
								else if(ViewBag.Action == "update")
								{
									<input type="button" name="updateEmployeeBtn" value="更新" data-id="@ViewBag.ID" onclick="addUpdateEmployee('update',@ViewBag.ID);">
								}
								&nbsp;&nbsp;&nbsp;&nbsp;
								<input type="button" name="cancelEdit" value="取消" onclick="closeSubWin();">
							</div>
						</form>
						<br/>
					</div>

		        </div>
            </div>		
        </div>


		<script src="~/js/api/jquery_3_4_1.js" type="text/javascript"></script>
		<script src="~/js/api/popper_1_16_1.js" type="text/javascript"></script>
		<script src="~/js/api/bootstrap_4_4_1.js" type="text/javascript"></script> 
		<script src="~/js/baseJS.js" type="text/javascript"></script>
		<script src="~/js/subWindows.js" type="text/javascript"></script>
        

	</body>
</html>