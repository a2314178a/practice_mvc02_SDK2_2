@{
    ViewData["Title"] = "登入頁面";
}

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1">				    

	</head>

	<body>			
        <div class="container"><!--內容-->
            <div class="row mx-0 align-items-center justify-content-center w-100">
                <div class="col-12 col-md-9 col-lg-6 ">
                    <div style="text-align:center;">
                    <h1 style="padding:20px; ">人員登入</h1>
                    </div>
                    <form method="post" class="login">                              
                        <div class="form-group">
                            <label for="account">帳號</label>
                            <input type="text" class="form-control" id="account" name="account" placeholder="請輸入帳號" value="">
                        </div>
                        <div class="form-group">
                            <label for="password">密碼</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="請輸入密碼" value="">
                        </div>                                
                        <button id="login" type="submit" class="btn btn-secondary">登入</button>                                                                    
                    </form>	  
                </div>
            </div>		
        </div>	
        	
        @section Scripts{
            <script src="~/js/baseJS.js" type="text/javascript"></script>
            <script src="~/js/homePage.js" type="text/javascript"></script>
        }

	</body>
</html>
