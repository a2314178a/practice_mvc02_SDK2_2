@{
    ViewData["Title"] = "歡迎";
}

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1">				    
	</head>

	<body>			
        <div class="container"><!--內容-->
            <div class="row mx-0 align-items-center justify-content-center w-100">
                <div class="col-10">
                    <div style="text-align:center;">
                        <br/>
                        <form id="dataForm" class="myDetail">
                            <table class="table table-striped table-bordered">
                                <tbody id="employeeDetail">
                                    <tr>
                                        <td class="detailTitleTd">名字:</td>
                                        <td class="detailMainTd" name="userName"></td>
                                        <td class="detailTitleTd">性別:</td>
                                        <td class="detailMainTd" name="sex"></td>
                                    </tr>
                                    @* <tr>
                                        <td class="detailTitleTd">生日:</td>
                                        <td class="detailMainTd" name="birthday"></td>
                                        <td class="detailTitleTd">年齡:</td>
                                        <td class="detailMainTd" name="age"></td>
                                    </tr> *@
                                     <tr>
                                        <td class="detailTitleTd">部門:</td>
                                        <td class="detailMainTd" name="department"></td>
                                        <td class="detailTitleTd">職位:</td>
                                        <td class="detailMainTd" name="position"></td>
                                    </tr>
                                    @* <tr>
                                        <td class="detailTitleTd">身分證字號:</td>
                                        <td class="detailMainTd" name="humanID"></td>
                                        <td class="detailTitleTd">報到日期:</td>
                                        <td class="detailMainTd" name="startWorkDate"></td>
                                    </tr> *@
                                    <tr>
                                        <td class="detailTitleTd">特休天數:</td>
                                        <td class="detailMainTd" name="mySpLeave"></td>
                                        <td class="detailTitleTd">特休期限:</td>
                                        <td class="detailMainTd" name="spLeaveDeadLine"></td>
                                    </tr>

                                    <tr id="pwRow" group="canEdit">
                                        <td class="detailTitleTd">密碼:</td>
                                        <td class="detailMainTd" ><input type="password" group="detail" name="password"></td>
                                        <td class="detailTitleTd">確認密碼:</td>
                                        <td class="detailMainTd" ><input type="password" group="detail" name="rePassword"></td>
                                    </tr>
                                    @if(ViewBag.loginAccLV > 1)
                                    {
                                    <tr id="agentRow" group="canEdit">  
                                        <td class="detailTitleTd">職務代理人:</td>
                                        <td class="detailMainTd">
                                            <div style="display:inline-block; vertical-align:middle;">
                                                <select group="detail" name="agent">
                                                    <option value="0">請選擇</option>
                                                </select>
                                                <span style="margin:auto 10px;">授權&nbsp;<input type="checkbox" name="agentEnable"></span>
                                            </div>
                                        </td>
                                        <td colspan="2"></td>    
                                    </tr>  
                                    }  
                                    <tr>
                                        <td colspan="4">
                                            <input type="button" id="changePw" value="修改密碼" onclick="showRow(1);">
                                            @if(ViewBag.loginAccLV > 1)
                                            {
                                            <input type="button" id="changeAgent" value="修改職務代理人" onclick="showRow(2);">
                                            }
                                        </td>  
                                    </tr>           
                                </tbody>
                            </table>
                            <hr/>
                            <div group="canEdit" id="btnDiv">
                                <input type="button" id="updateBtn" value="儲存" onclick="updateMyDetail();"> 
                                &nbsp;&nbsp;&nbsp;&nbsp;
                                <input type="button" id="celUpdate" value="取消" onclick="hideRow();"> 
                            </div>
                        </form>
                        <br/>
                    </div>
                </div><!--<div class="col-9">-->
            </div>		
        </div>	
        	
        @section Scripts{
            <script src="~/js/baseJS.js" type="text/javascript"></script>	 
            <script src="~/js/employeeDetail.js" type="text/javascript"></script>	
        }
 
	</body>
</html>
