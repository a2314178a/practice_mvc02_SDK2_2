@{
    ViewData["Title"] = "歡迎";
}

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1">				    
        @* <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">       *@

	</head>

	<body>			
        <div class="container"><!--內容-->
            <div class="row mx-0 align-items-center justify-content-center w-100">
                <div class="col-12">
                    <div id="ApplyOvertimePage">

                        <ul class="nav nav-tabs justify-content-end" group="table">                         
                            <span style="width:30px;"></span>
                            <li class="nav-item">
                                <a class='nav-link @(@ViewBag.Page!="log"?"active":"")' href="#" name="applyOvertime" onclick="leaveApp.showApplyOvertimePage();">申請</a>
                            </li>
                            <li class="nav-item">
                                <a class='nav-link @(@ViewBag.Page=="log"?"active":"")' href="#" name="applyOvertimeLog" onclick="leaveApp.showApplyOvertimePage('log');">申請紀錄</a>
                            </li>
                        </ul>
                        
                        <div id="searchFilterDiv" style="text-align:center; margin:20px auto;">
                            <p>
                                <form>
                                    起始 Date: <input type="date" id="filter_sDate">&nbsp;&nbsp;&nbsp;&nbsp;
                                    結束 Date: <input type="date" id="filter_eDate">
                                    <input type="button" name="searchFilterBtn" value="搜尋">
                                </form>
                            </p>   
                        </div>
                        
                        @if(ViewBag.Page!="log")
                        {
                            <div id="applyOvertimeDiv">
                                <table class="table table-hover table-bordered applyLeave_table">
                                    <thead class="thead-dark" >
                                        <tr>
                                            <th scope="col">申請日期</th>
                                            <th scope="col" width="20%">備註</th>
                                            <th scope="col">申請加班日</th>
                                            <th scope="col">加班時間長度</th>
                                            <th scope="col" width="15%">管理動作</th>
                                        </tr>
                                    </thead> 
                                    <tbody id="applyOvertimeList">
                                    </tbody>
                                </table>
                                <a href="javascript:void(0);" class="btn btn-primary btnActive add_overtime" style="float:right" onclick="leaveApp.showAddApplyOvertimeRow();">申請</a>
                            </div>
                        }
                        else
                        {
                            <div id="applyOvertimeLogDiv">
                                <table class="table table-hover table-bordered applyLeave_table">
                                    <thead class="thead-dark" >
                                        <tr>
                                            <th scope="col">申請日期</th>
                                            <th scope="col" width="20%">備註</th>
                                            <th scope="col">申請加班日</th>
                                            <th scope="col">加班時間長度</th>
                                            <th scope="col">審核狀態</th>
                                        </tr>
                                    </thead> 
                                    <tbody id="applyOvertimeLogList">
                                    </tbody>
                                </table>
                            </div>
                        }
                    <br/>    
                    </div>
                </div>
            </div>		
        </div>	



        <div class="template">
           <table>
                @if(ViewBag.Page!="log")
                {
                    <tr name="applyOvertimeRow">
                        <td scope="col" name="applyDate"></td>
                        <td scope="col" name="note" width="20%"></td>
                        <td scope="col" name="workDate"></td>
                        <td scope="col" name="timeLength"></td>
                        <td scope="col" width="15%">
                            @* <a href="javascript:void(0);" class="btn btn-primary edit_applyOvertime btnActive" >編輯</a> *@
                            <a href="javascript:void(0);" class="btn btn-danger del_applyOvertime btnActive" >取消申請</a>
                        </td>
                    </tr>
                    <tr name="addApplyOvertimeRow">
                        <td scope="col" name="newApplyDate"></td>
                        <td scope="col" width="20%">
                            <textarea style="width:200px;height:100px; margin:auto ;" name="newApplyNote"></textarea>
                        </td>
                        <td scope="col">
                            <input type='date' name="newStartDate" style='zoom:80%'><br/>
                        </td>
                        <td scope="col">
                            <select name="overtimeLength">
                                <option value="05">0.5 小時</option>
                                <option value="10">1 小時</option>
                                <option value="15">1.5 小時</option>
                                <option value="20">2 小時</option>
                                <option value="25">2.5 小時</option>
                                <option value="30">3 小時</option>
                                <option value="35">3.5 小時</option>
                                <option value="40">4 小時</option>
                                <option value="45">4.5 小時</option>
                                <option value="50">5 小時</option>
                                <option value="55">5.5 小時</option>
                                <option value="60">6 小時</option>
                                <option value="65">6.5 小時</option>
                                <option value="70">7 小時</option>
                                <option value="75">7.5 小時</option>
                                <option value="80">8 小時</option>
                                <option value="85">8.5 小時</option>
                                <option value="90">9 小時</option>
                                <option value="95">9.5 小時</option>
                                <option value="100">10 小時</option>
                                <option value="105">10.5 小時</option>
                                <option value="110">11 小時</option>
                                <option value="115">11.5 小時</option>
                                <option value="120">12 小時</option>
                            </select>
                        </td>
                        <td scope="col" width="15%">
                            <a href="javascript:void(0);" class="btn btn-primary add_applyOvertime" >申請</a>
                            @* <a href="javascript:void(0);" class="btn btn-primary up_applyOvertime" >更新</a> *@
                            <a href="javascript:void(0);" class="btn btn-danger cel_applyOvertime" >取消</a>
                        </td>
                    </tr> 
                }
                else
                {
                    <tr name="applyOvertimeLogRow">
                        <td scope="col" name="applyDate"></td>
                        <td scope="col" name="note" width="20%"></td>
                        <td scope="col" name="startTime"></td>
                        <td scope="col" name="timeLength"></td>
                        <td scope="col" name="applyStatus"></td>
                    </tr>
                }
            </table>
        </div>





        	
        @section Scripts{
            <script src="~/js/baseJS.js" type="text/javascript"></script>	 
            <script src="~/js/applyOvertime.js" type="text/javascript"></script>
        }
        	 
	</body>
</html>
