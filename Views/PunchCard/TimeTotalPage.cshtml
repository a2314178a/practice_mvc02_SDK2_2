@{
    ViewData["Title"] = ViewData["loginName"] + "歡迎回來";
}

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1">				    
	</head>

	<body onload="getTimeTotalByID(@ViewBag.targetID);">			
        <div class="container"><!--內容-->
            <div class="row mx-0 align-items-center justify-content-center w-100">
                <div class="col-12">
                    <div id="timeTotalPage" style="text-align:center;">
                            
                        <ul class="nav nav-tabs justify-content-end" group="table">                         
                            <span style="width:30px;"></span>
                            @if(ViewBag.showPunchBtn)
                            {
                            <li class="nav-item">
                                <a class="nav-link" href="#" onclick="showPunchCardPage();">打卡</a>
                            </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" href="#" onclick="showPunchLogPage(@ViewBag.targetID);">打卡紀錄</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="#" onclick="showTimeTotalPage(@ViewBag.targetID);">工作時數</a>
                            </li>
                        </ul>
                        
                        <div id="timeTotalDiv">
                            <div style="margin:10px;"><h3>@ViewBag.punchLogName 的工作時數</h3></div>

                            <table class="table table-hover table-bordered timeTotal_table">
                                <thead class="thead-dark" >
                                    <tr>
                                        <th scope="col">月份</th>
                                        <th scope="col">工作時數(分鐘)</th>
                                        <th scope="col">加班時數(分鐘)</th>
                                    </tr>
                                </thead> 
                                <tbody id="timeTotalList">
                                </tbody>
                            </table>
                        </div> 
                       
                    </div>  
                </div>
            </div>		
        </div>	
        	


        <div class="template">
            <table>
                <tr name="timeTotalRow">
                    <td scope="col" name="logDate"></td>
                    <td scope="col" name="timeTotal"></td>
                    <td scope="col" name="overtimeTotal"></td>
                </tr>
            </table>
        </div>






        @section Scripts{
            <script src="~/js/baseJS.js" type="text/javascript"></script>
            <script src="~/js/punchCardLogPage.js" type="text/javascript"></script>		
        } 

	</body>
</html>
