@{
    ViewData["Title"] = ViewData["loginName"] + "歡迎回來";
}

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1">				    
	</head>

	<body>			
        <div class="container"><!--內容-->
            <div class="row mx-0 align-items-center justify-content-center w-100">
                <div class="col-12">
                    
                    <div id="punchCardPage">
                        
                        <ul class="nav nav-tabs justify-content-end" group="table">                         
                            <span style="width:30px;"></span>
                            <li class="nav-item">
                                <a class="nav-link active" href="#" onclick="showPunchCardPage();">打卡</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" onclick="showPunchLogPage(@ViewBag.targetID);">打卡紀錄</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" onclick="showTimeTotalPage(@ViewBag.targetID);">工作時數</a>
                            </li>
                        </ul>

                        <div style="text-align:center;">
                            <div style="margin:50px auto 100px;">
                                <h1>歡迎 @ViewData["loginName"] </h1>
                            </div>
                            
                            <div style="margin:50px;">
                                <h2>現在時間</h2>
                                <h2 id="dateYMDW"></h2>
                                <h2 id="dateHMS"></h2>
                            </div>
                            <div style="margin:20px;">
                                <a href="javascript:void(0);" id="punchCardBtn" class="btn btn-primary" style="zoom:200%">打卡</a>
                                @* <a href="javascript:void(0);" id="rePunchBtn" class="btn btn-primary" style="zoom:200%" onclick="rePunchCardFn();">再次打卡</a> *@
                            </div>
                            <div><h4 id="punchTimeText_on"></h4></div>
                            <div><h4 id="punchTimeText_off"></h4></div>
                            @* <div style="margin:20px;">
                               
                                <div style="display:inline; text-align: center;">
                                    <input type="radio" name="punchOption" id="online" value="1">
                                    <label class="forRadio" for="online">上班</label>
                                </div>

                                <div style="display:inline; margin:30px;"></div>

                                <div style="display:inline; text-align: center;">
                                    <input type="radio" name="punchOption" id="offline" value="0">
                                    <label class="forRadio" for="offline">下班</label>
                                </div>
                                
                            </div> *@
                        </div>




                    </div>
                    
                    
                </div>
            </div>		
        </div>




        <div class="template">
            <table>
            </table>
        </div>


        @section Scripts{
            <script src="~/js/baseJS.js" type="text/javascript"></script>
            <script src="~/js/punchCardPage.js" type="text/javascript"></script>	
        }        	 
	</body>
</html>
